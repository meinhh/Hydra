@model IEnumerable<Hydra.Models.Product>

<section id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <section class="carousel-inner" role="listbox">
        @foreach (var product in Model.Take(4))
        {
            @if (product.ID == 1)
            {
                <div class="item active">
                    <img src="@Html.DisplayFor(modelItem => product.ImageUrl)" alt="@Html.DisplayFor(modelItem => product.Name)" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <button class="btn btn-danger">
                            Get More details for @Html.ActionLink(product.Name, "Details", "Product", new { id = product.ID })
                        </button>
                    </div>
                </div>
            }
            else
            {
                <div class="item">
                    <img src="@Html.DisplayFor(modelItem => product.ImageUrl)" alt="@Html.DisplayFor(modelItem => product.Name)" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <button class="btn btn-danger">
                            Get More details for @Html.ActionLink(product.Name, "Details", "Product", new { id = product.ID })
                        </button>
                    </div>
                </div>
            }
        }


        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </section>
